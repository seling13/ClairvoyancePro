@model OneFin.Models.Roles

@{
    ViewData["Title"] = "Edit";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        <i class="fa fa-bell"></i> Option Master
    </h1>
    <ol class="breadcrumb">
        <li><a href="/home/index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="~/Security/RoleMaster/index"><i class="fa fa-cog"></i> Role Master</a></li>
        <li class="active"> Edit</li>
    </ol>
</section>

<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Edit</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form asp-action="Edit" class="form-horizontal">
            <div class="box-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="NormalizedName" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="NormalizedName" class="form-control" />
                            <span asp-validation-for="NormalizedName" class="text-danger"></span>
                        </div>

                     </div>
                        <div class="box-footer">
                            <div class="form-group">
                                <a asp-action="Index">Back to List</a>
                                <input type="submit" value="Save" class="btn btn-info pull-right" />
                            </div>
                        </div>
                    </div>
        </form>
    </div>
    <!-- /.box -->
</section>
