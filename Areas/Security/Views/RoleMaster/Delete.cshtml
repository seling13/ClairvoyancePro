@model OneFin.Models.Roles

@{
    ViewData["Title"] = "Delete";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        <i class="fa fa-cog"></i> Option Master
    </h1>
    <ol class="breadcrumb">
        <li><a href="/home/index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="~/Security/RoleMaster/index"><i class="fa fa-cog"></i> Option Master</a></li>
        <li class="active"> Delete</li>
    </ol>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Are you sure you want to delete this?</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <div class="box-body">
            <dl class="dl-horizontal">
                <dt>
                    Role Name
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt>
                    Normalized Name
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NormalizedName)
                </dd>
            </dl>

            <form asp-action="Delete" class="form-horizontal">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-info pull-right">Delete</button>
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</section>