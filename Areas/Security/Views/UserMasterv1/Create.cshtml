@model OneFin.Models.UserMaster

@{
    ViewData["Title"] = "Create";
}
<script>
$(document).ready(function() {
    $.ajax({
        type: "Post",
        url: '@Url.Action("GetOptList", "OptList", new { area = "" })',
        data: {
            OptName: "PositionCode"
        },
        success: function (result) {
            for (var i = 0; i < result.data.length; i++) {
                $('#PositionCode').append('<option value=' + result.data[i].value + '>' + result.data[i].text + '</option > ');
            }

        }
    });
 });
</script>

