@model OneFin.Models.UserMaster

@{
    ViewData["Title"] = "Delete";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        <i class="fa fa-user-circle-o"></i>  User Master
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/home/index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="~/Usermaster/index"><i class="fa fa-user-circle-o"></i>  User Master</a></li>
        <li class="active"> Delete</li>
    </ol>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Are you sure you want to delete this?</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->


        <dl class="dl-horizontal">
            <dt>
                User Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt>
                Full Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FullName)
            </dd>
            <dt>
                Position
            </dt>
            <dd>
                @Html.DisplayFor(model => model.PositionCode)
            </dd>
            <dt>
                Email
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>
        <form asp-action="Delete" class="form-horizontal">
            <div class="box-footer">
                <input type="hidden" asp-for="ID" />
                <a asp-action="Index">Back to List</a>
                <!--<button asp-action="Index" type="submit" class="btn btn-default">Cancel</button>-->
                <button type="submit" class="btn btn-info pull-right">Delete</button>
            </div>
        </form>
        <!-- /.box-footer -->
    </div>
    <!-- /.box -->
</section>