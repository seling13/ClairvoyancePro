@model OneFin.Models.OptMaster

@{
    ViewData["Title"] = "Delete";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        <i class="fa fa-cog"></i> Option Master
    </h1>
    <ol class="breadcrumb">
        <li><a href="/home/index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="~/Configuration/Optmaster/index"><i class="fa fa-cog"></i> Option Master</a></li>
        <li class="active"> Delete</li>
    </ol>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Are you sure you want to delete this?</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <div class="box-body">
            <dl class="dl-horizontal">
                <dt>
                    Option Name
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.OptName)
                </dd>
                <dt>
                    Value
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Value)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Text)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Text)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Status)
                </dd>
            </dl>
            <form asp-action="Delete" class="form-horizontal">
                <div class="box-footer">
                    <input type="hidden" asp-for="OptName" />
                    <input type="hidden" asp-for="Value" />
                    <a asp-action="Index">Back to List</a>
                    <button type="submit" class="btn btn-info pull-right">Delete</button>
                </div>
            </form>
            </div>
        </div>
</section>