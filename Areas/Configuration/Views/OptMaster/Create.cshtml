@model OneFin.Models.OptMaster

@{
    ViewData["Title"] = "Create";
}


<section class="content-header">
    <h1>
        <i class="fa fa-cog"></i> Option Master
    </h1>
    <ol class="breadcrumb">
        <li><a href="/home/index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="~/Configuration/Optmaster/index"><i class="fa fa-cog"></i> Option Master</a></li>
        <li class="active"> Create</li>
    </ol>
</section>

<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Create</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form asp-action="Create" class="form-horizontal">
            <div class="box-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="OptName" class="col-sm-2 control-label">Option Name</label>
                    <div class="col-sm-10">
                        <input asp-for="OptName" class="form-control" />
                        <span asp-validation-for="OptName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Value" class="col-sm-2 control-label">Value </label>
                    <div class="col-sm-10">
                        <input asp-for="Value" class="form-control" />
                        <span asp-validation-for="Value" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Text" class="col-sm-2 control-label">Text </label>
                    <div class="col-sm-10">
                        <input asp-for="Text" class="form-control" />
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="col-sm-2 control-label">Status</label>
                    <div class="col-sm-10">
                        <select id="Status" name="Status" asp-for="Status">
                            <option value="A">Active</option>
                            <option value="C">Cancel</option>
                        </select>
                        <!--<input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>-->
                    </div>
                </div>
                <div class="box-footer">
                    <a asp-action="Index">Back to List</a>
                    <!--<button type="button" asp-action="Index" class="btn btn-default">Cancel</button>-->
                    <button type="submit" class="btn btn-info pull-right">Create</button>
                </div>
                </div>
        </form>
    </div>
    <!-- /.box -->
</section>