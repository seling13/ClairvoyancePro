@model OneFin.Struct.CommonService.LoginInput
@{
    Layout = null;
}
<!--@Html.Raw(TempData["msg"])-->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/bower/font-awesome/css/font-awesome.css">
    <script src="~/js/jquery.js"></script>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }
        /** Alert*/
        .alertsuccess {
            padding: 20px;
            background-color: #7aa6cf;
            color: white;
        }

        .alerterror {
            padding: 20px;
            background-color: #eb776e;
            color: white;
        }

        input[type=button], input[type=submit], input[type=reset] {
            background-color: #EF953D;
            width: 300px;
            border: none;
            color: white;
            padding: 16px 32px;
            text-decoration: none;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 20px;
            margin-top: 15px;
        }

            button:hover {
                opacity: 0.8;
            }

        .cancelbtn {
            width: auto;
            padding: 10px 18px;
            background-color: #f44336;
        }

        .imgcontainer {
            text-align: center;
            margin: 12px 0 12px 0;

        }

        img.avatar {
            width: 40%;
            border-radius: 50%;
        }

        .container {
            padding: 16px;
            text-align: center;
        }

        span.psw {
            float: right;
        }

        .modal-content {
            margin: auto auto auto auto; /* 5% from the top, 15% from the bottom and centered */
            width: 100%; /* Could be more or less, depending on screen size */
        }

        /*Input Icon*/
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        * {
            box-sizing: border-box;
        }

        .input-container {
            width: 100%;
            margin-top: 15px;
            text-align: center;
        }

        .input-field {
            width: 300px;
            padding: 10px;
            border-radius: 20px;
            border-color: #ccc;
        }


            .btn:hover {
                opacity: 1;
            }
    </style>
</head>
<body >
    @if (TempData["error"] != null)
    {
        <div class="alerterror">
            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
            <strong>Error!</strong> @TempData["error"]
        </div>

    }
    @if (TempData["success"] != null)
    {
        <div class="alertsuccess">
            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
            <strong>Success!</strong> @TempData["success"]
        </div>

    }

    <!--<form class="modal-content animate" action="Account/Validate" method="post">-->
<form class="modal-content animate" asp-action="Validate" method="post">
    <div class="container">
        <div class="imgcontainer">
            <img class="img" src="~/dist/img/faviconLarge.ico" style="width: 300px; height: 100px; margin-top: 20px; " />
        </div>
        <div class="input-container">
            <input class="input-field form-control" type="text" placeholder="Username" asp-for="userName" id="username" required>
        </div>

        <div class="input-container">
            <input asp-for="password" class="input-field form-control" type="password" placeholder="Password" name="password" id="password" required>
        </div>

        <input type="submit" value="Log in" class="btn btn-dark mb-2" width: 100% />
    </div>
    <div class="container">
        <span class="new"> <a href="~/Account/Register">Register New User</a></span>
    </div>
</form>


</body>
</html>