@model OneFin.Struct.CommonService.RegisterInput
@{ Layout = null; }
<h1>Register User</h1>
<!DOCTYPE html>
<html lang="en">
<body>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Register" method="post">
                <table>
                    <tr>
                        <td>
                            <label for="uname">Username</label>
                        </td>
                        <td>
                            <input asp-for="Username" type="text" placeholder="Enter Username" id="Username" required>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="email">Email Adderess</label>
                        </td>
                        <td>
                            <input asp-for="Email" type="text" placeholder="Enter Email" id="Email" required>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="uname">Full Name</label>
                        </td>
                        <td>
                            <input asp-for="FullName" type="text" placeholder="Enter Username" id="Username" required>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="uname">User Role</label>
                        </td>
                        <td>
                            @Html.DropDownList("UserRole", new SelectList(ViewBag.data, "NormalizedName","Name"))
                        </td>
                    </tr>
                    
                    <tr>
                        <td>
                            <label for="psw">Password</label>
                        </td>
                        <td>
                            <input asp-for="Password" type="password" placeholder="Enter Password" id="Password" required>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="psw">ConfirmPassword</label>
                        </td>
                        <td>
                            <input asp-for="ConfirmPassword" type="password" placeholder="Enter Password" id="ConfirmPassword" required>
                        </td>
                    </tr>
                    <tr>
                    </tr>
                </table>
                <input type="submit" value="Create" class="btn btn-primary" />
            </form>
        </div>
    </div>
</body>
</html>
